

  <div class="row">
    <div class="col s12 m12 l12">
      <div class="card">
        <div class="card-image">
          {{!-- <img src="../public/assets/img/burger.jpg"> --}}
          <img src="https://images.unsplash.com/photo-1551782450-a2132b4ba21d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80">
          <span class="card-title">Burger Time</span>
          {{!-- <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a> --}}
        </div>
        
      </div>
    </div>
  </div>

 <div class="row">
    <div class="col s12 m12 l12">
      <div class="card BurgerList">
        <span class="card-title">Burgers That Are Ready To Eat</span>
        <hr>
          {{!-- <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="ml-4 material-icons">add</i></a> --}}
        <div class="card-content">
          <ul>
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burgers/burger_block devoured=true}}
                {{/unless}}
              {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12 m12 l12">
      <div class="card BurgerList">
        <span class="card-title">Burgers That Were Already Eaten</span>
        <hr>
          {{!-- <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="ml-4 material-icons">add</i></a> --}}
        <div class="card-content">
          <ul>
            {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger_block devoured=false}}
              {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12 m12 l12">
      <div class="card BurgerList">
        <span class="card-title">Add a Burger</span>
        <hr>
          {{!-- <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="ml-4 material-icons">add</i></a> --}}
        <div class="card-content">
          <form class="create-form">
{{!-- 
            <div class="form-group input-field"> --}}
              <label for="burger" >Burger Name:</label>
              <input type="text center" id="burger" name="burger_name">
            {{!-- </div> --}}

            <div class="form-group input-field" action="#">
              {{!-- <label for="devoured">Devoured?</label> --}}
              <p>
             <label for="devoured">
                <input type = "checkbox" id="devoured" value="1"/>
                <span>Already Devoured!</span> 
        
                <input type = "checkbox" id="devoured" value="0"/>
                <span>Ready to Eat!</span> 
              </label>
               </p>
            </div>


            {{!-- <a class="submit btn-floating btn-medium waves-effect waves-light " type="submit" name="action"><i class="material-icons blue" name="action">add</i></a> --}}
              <button class="submit btn waves-effect waves-light" type="submit" name="action">Add Burger
                <i class="material-icons right">add</i>
              </button>

          </form>
        </div>
      </div>
    </div>
  </div>




